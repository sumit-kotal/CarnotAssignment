<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView app:cardCornerRadius="8dp"
    app:cardElevation="10dp"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_variety"
            android:layout_below="@id/text_commodity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:text="Variety"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/text_commodity"
            android:text="Commodity"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/text_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_variety"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:text="State"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_district"
            android:text="District"
            android:layout_below="@id/text_variety"
            android:layout_toEndOf="@+id/text_state"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/text_market"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_district"
            android:layout_margin="10dp"
            android:text="State"
            android:textAlignment="center" />



        <TextView
            android:id="@+id/text_min_price"
            android:layout_below="@+id/text_commodity"
            android:layout_alignParentEnd="true"
            android:text="4000"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_min" />

        <TextView
            android:id="@+id/text_max_price"
            android:layout_below="@+id/text_min_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:text="4000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_max" />


        <TextView
            android:id="@+id/text_modal_price"
            android:layout_below="@+id/text_max_price"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="8dp"
            android:text="4000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:drawableStartCompat="@drawable/ic_modal" />

        <TextView
            android:id="@+id/text_arr_date"
            android:text="State"
            android:layout_below="@+id/text_market"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </RelativeLayout>

</androidx.cardview.widget.CardView>

